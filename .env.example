# AITradeGame 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 基础配置 ====================
FLASK_ENV=production
SECRET_KEY=请替换为随机字符串-使用openssl rand -hex 32生成
DEBUG=False

# ==================== 数据库配置 ====================
# SQLite（默认，适合小规模）
DATABASE_URL=sqlite:///data/AITradeGame.db

# PostgreSQL（推荐生产环境）
# 本地安装: DATABASE_URL=postgresql://username:password@localhost:5432/aitradegame
# Docker: DATABASE_URL=postgresql://postgres:changeme123@postgres:5432/aitradegame
# 云服务: DATABASE_URL=postgresql://user:pass@host:5432/dbname

# PostgreSQL Docker配置（如使用docker-compose）
POSTGRES_DB=aitradegame
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme123  # 生产环境务必修改！

# ==================== AI API 密钥 ====================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# DeepSeek
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# 其他AI提供商
# ANTHROPIC_API_KEY=sk-ant-...
# COHERE_API_KEY=...

# ==================== 交易所API（实盘交易）====================
# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=True  # 测试网，改为False使用主网

# OKX
OKX_API_KEY=your-okx-api-key
OKX_API_SECRET=your-okx-api-secret
OKX_PASSPHRASE=your-okx-passphrase

# ==================== 应用配置 ====================
# 服务器配置
HOST=0.0.0.0
PORT=5000
WORKERS=4

# 定时任务配置
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_JOB_STORES=default

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== 安全配置 ====================
# CORS允许的域名（多个用逗号分隔）
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session配置
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ==================== 监控和告警 ====================
# 邮件告警配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=your-alert-email@gmail.com

# ==================== 限制配置 ====================
# 单个模型最大初始资金
MAX_INITIAL_CAPITAL=100000

# API调用速率限制
RATE_LIMIT_PER_MINUTE=60

# 最大并发交易模型数
MAX_CONCURRENT_MODELS=10
